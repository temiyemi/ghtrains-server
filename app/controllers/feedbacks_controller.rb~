class FeedbacksController < ApplicationController

  before_filter do
    @customer = Customer.find_by_app_key(params[:app_key])
  end

  def index
    @feedbacks = @customer.feedbacks unless @customer.nil?
    render js: "#{params[:callback]}(#{@feedbacks.to_json});"
  end

  def create
    @feedback = @customer.feedbacks.create(params[:feedback])
    render js: "#{params[:callback]}(#{@feedback.to_json});"
  end

end